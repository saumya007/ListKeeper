<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/parent_dialog_mark_padding"
    android:background="@color/bg_dialog">
<ImageButton
    android:id= "@+id/btn_close"
    android:layout_width="12dp"
    android:layout_height="12dp"
    android:src="@drawable/ic_close"
    android:scaleType="fitCenter"
    android:layout_alignParentRight="true"
    android:background="@null"
    android:layout_above="@+id/btn_completed"/>
    <Button
        android:id="@+id/btn_completed"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark Completed"
        android:textAllCaps="false"
        android:textSize="@dimen/btn_completed_textsize"
        android:fontFamily="sans-serif-thin"
        android:background="@null"
        android:drawableTop="@drawable/ic_check"
        android:drawablePadding="@dimen/et_drop_padding"
        android:layout_centerInParent="true"
        android:layout_marginTop="96dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="96dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_completed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        app:srcCompat="@drawable/pointer" />

    <TextView
        android:id="@+id/pointer_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:text="Click the button above to mark item complete"
        android:layout_below="@+id/btn_completed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>