<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/row_drops_ll_padding"
    android:background="@drawable/bg_row_drop">

    <ImageView
        android:layout_width="@dimen/iv_drops_dimen"
        android:layout_height="@dimen/iv_drops_dimen"
        android:background="@null"
        android:id="@+id/iv_drop"
        android:src="@drawable/ic_drop" />

    <TextView
        android:layout_width="0dp"
        android:id ="@+id/tv_what"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/tv_what_side_padding"
        android:paddingRight="@dimen/tv_what_side_padding" />

    <TextView
        android:id= "@+id/tv_when"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>